<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.kat.article.dao.CommentDao">

   <insert id="commentInsert" parameterType="com.kat.article.model.Comment">
      INSERT INTO COMMENT
      VALUES (0, #{go_with_no}, #{cmt_content}, #{cmt_user_id}, #{cmt_password}, now(), 0, 0)
   </insert>

   
   
   
   <select id="commentList" resultType="com.kat.article.model.Comment">
      SELECT *
      FROM comment
      WHERE go_with_no = #{param1} AND delete_flag = 0
   </select>
   
   <select id="commentSelectCount" resultType="int">
      SELECT count(*)
      FROM comment
      WHERE go_with_no = #{no1} AND delete_flag = 0
   </select>
</mapper>